<?php/** * Implements hook_node_view() */function car_schema() {    $schema['cartbl'] = array(      'description' => 'The base table for cars',      'fields' => array(        'carid' => array(          'description' => 'The primary identifier for a car.',          'type' => 'serial',          'unsigned' => TRUE,          'not null' => TRUE,        ),        'color' => array(          'description' => 'The color for a car',          'type' => 'varchar',          'length' => 20,          'not null' => TRUE,          'default' => '',        ),        'model' => array(          'description' => 'The model of this car.',          'type' => 'varchar',          'length' => 40,          'not null' => TRUE,          'default' => 'car',        ),        'year' => array(          'description' => 'Creation date.',          'type' => 'varchar',          'length' => 4,          'default' => date('Y'),        ),        'mileage' => array(          'description' => 'Mileage.',          'type' => 'int',          'default' => 0,          'unsigned' => TRUE,        ),        'car_image' => array(          'description'=>'car image field',          'type'=>'blob',          'size'=>"big",          'serialize'=>TRUE,        ),              ) + entity_exportable_schema_fields(),      'primary key' => array('carid'),    );    return $schema;}/** * Implements hook_enable() */function car_enable() {    field_cache_clear();    field_associate_fields("car");    if (field_info_field('car_image'))        return;    $field = array(      'field_name' => 'car_image',      'cadinality' => 1,      'type' => 'image',    );    field_create_field($field);    $instance = array(      'field_name' => 'car_image',      'entity_type' => 'car',      'bundle' => 'car',      'label' => 'Photo',      'description' => 'Photo of automobile',      'display' => array(        'default' => array('label' => 'hidden')      ),      'settings' => array(        'file_directory' => '/foto_images',      ),      'widget' => array(        'type' => 'image_image',        'settings' => array(          'uri_scheme' => 'public',        ),      ),    );    field_create_instance($instance);}/* * Implements hook_uninstall(). */function car_example_uninstall() {  field_attach_delete_bundle('car' , 'car' );}