<?php/** * implement hook_schema() */function loger_schema() {    $schema['crudlogs'] = array(      'description' => 'The table for save logs',      'fields' => array(        'logid' => array(          'description' => 'The primary identifier for a log',          'type' => 'serial',          'unsigned' => TRUE,          'not null' => TRUE,        ),        'description' => array(          'description' => 'The description for log',          'type' => 'varchar',          'length' => 255,          'not null' => TRUE,          'default' => '',        ),        'shared' => array(          'description' => 'The  status for  a log',          'type' => 'int',          'size' => 'tiny',          'not null' => FALSE,          'default' => 0,        ),        'date' => array(          'description' => 'Creation date.',          'type' => 'varchar',          'length' => 20,          'default' => time(),        ),      ),      'primary key' => array('logid'),    );    return $schema;}